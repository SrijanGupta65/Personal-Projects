{
  "name": "bridgeling-widget",
  "version": "0.1.0",
  "description": "Bridgeling embeddable widget",
  "main": "dist/widget.js",
  "scripts": {
    "build": "esbuild src/widget.ts --bundle --minify --outfile=public/widget.js",
