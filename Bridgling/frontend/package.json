    "serve": "http-server public -p 8000"
  },
  "dependencies": {},
  "devDependencies": {
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "http-server": "^14.1.1"
  }
}
